{% extends '/dashboard/base.html.twig' %}

{% block content %}
    <div class="row justify-content-md-center">
        <h2>Anagram Tester</h2>
        <hr />
        <div class="col-md-6">
            {% if error is not null %}
                <div class="alert alert-warning">{{ error }}</div>
            {% elseif are_anagram is not null %}
                <div class="alert alert-success">{{ are_anagram }}</div>
            {% endif %}
            <form class="mt-5" method="post">
                <div class="form-group">
                    <label>Enter word #1</label>
                    <input class="form-control" type="text" name="word1" value="" />
                </div>
                <div class="form-group">
                    <label>Enter word #2</label>
                    <input class="form-control" type="text" name="word2" value="" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}